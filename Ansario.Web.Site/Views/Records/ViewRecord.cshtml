@model List<Ansario.Web.Site.Models.BodyRecordModel>
@{
    ViewBag.Title = "View Records";
}
<style>
    #map {
        height: 200px;
        width: 100%;
    }
</style>

@if (Model == null || !Model.Any())
{
    <div class="text-center">
        <h2 class="text-center">No records found matching the Identification Number.</h2>
    </div>
}
else
{
    <div class="container">
        <div class="row">
                        <div class="card text-center col-12" style="padding:0;">
                            <div class="card-header text-center">
                                <h2>Possible Identity: @(!string.IsNullOrWhiteSpace(Model.First().Title) ? Model.First().Title : "Unknown")</h2>
                                <h5>Identification Number: @(Model.First().Id)</h5>

                                <ul class="nav nav-tabs card-header-tabs">
                                    <li class="nav-item">
                                        <a class="nav-link" href="#description" role="tab" data-toggle="tab">Description</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#evidence" role="tab" data-toggle="tab">Associated Evidence</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#pictures" role="tab" data-toggle="tab">Pictures</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#location" role="tab" data-toggle="tab">Location</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="card-body">

                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane fade in active" id="description">
                                        <dl class="row">
                                            <dt class="col-sm-3">Age Group</dt>
                                            <dd class="col-sm-9">@Model.First().Description.AgeGroup</dd>
                                            <dt class="col-sm-3">Race</dt>
                                            <dd class="col-sm-9">@Model.First().Description.Race</dd>
                                            <dt class="col-sm-3">General Condition</dt>
                                            <dd class="col-sm-9">@Model.First().Description.GeneralCondition</dd>
                                            <dt class="col-sm-3">Body Condition</dt>
                                            <dd class="col-sm-9">@Model.First().Description.BodyCondition</dd>
                                            <dt class="col-sm-3">Apparant Sex</dt>
                                            <dd class="col-sm-9">@Model.First().Description.ApparentSex</dd>
                                            <dt class="col-sm-3">Height</dt>
                                            <dd class="col-sm-9">@Model.First().Description.Height</dd>
                                            <dt class="col-sm-3">Weight</dt>
                                            <dd class="col-sm-9">@Model.First().Description.Weight</dd>
                                            <dt class="col-sm-3">Eye Color</dt>
                                            <dd class="col-sm-9">@Model.First().Description.EyeColor</dd>
                                            <dt class="col-sm-3">Head Hair Color</dt>
                                            <dd class="col-sm-9">@Model.First().Description.HeadHairColor</dd>
                                            <dt class="col-sm-3">Head Hair Length</dt>
                                            <dd class="col-sm-9">@Model.First().Description.HeadHairLength</dd>
                                            <dt class="col-sm-3">Facial Hair</dt>
                                            <dd class="col-sm-9">@Model.First().Description.FacialHair</dd>
                                        </dl>
                                    </div>
                                    <div role="tabpanel" class="tab-pane fade" id="evidence">
                                        <dl class="row">
                                            <dt class="col-sm-3">Clothing</dt>
                                            <dd class="col-sm-9">@Model.First().AssociatedEvidence.Clothing</dd>
                                            <dt class="col-sm-3">Footwear</dt>
                                            <dd class="col-sm-9">@Model.First().AssociatedEvidence.FootWear</dd>
                                            <dt class="col-sm-3">Eyewear</dt>
                                            <dd class="col-sm-9">@Model.First().AssociatedEvidence.EyeWear</dd>
                                            <dt class="col-sm-3">Personal Items</dt>
                                            <dd class="col-sm-9">@Model.First().AssociatedEvidence.PersonalItems</dd>
                                            <dt class="col-sm-3">Identity Documents</dt>
                                            <dd class="col-sm-9">@Model.First().AssociatedEvidence.IdentityDocuments</dd>
                                        </dl>
                                    </div>
                                    <div role="tabpanel" class="tab-pane fade w-100 p-3" id="pictures">
                                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                                            <div class="carousel-inner">
                                                <div class="carousel-item active">
                                                    <img class="img-fluid" src=@Model.First().Pictures.FullLength alt="Full Length">
                                                    <div class="carousel-caption d-none d-md-block">
                                                        <h3>Full Length</h3>
                                                    </div>
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="img-fluid" src=@Model.First().Pictures.ElevatedView alt="Elevated View">
                                                    <div class="carousel-caption d-none d-md-block">
                                                        <h3>Elevated View</h3>
                                                    </div>
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="img-fluid" src=@Model.First().Pictures.FrontViewOfHead alt="Front View of Head">
                                                    <div class="carousel-caption d-none d-md-block">
                                                        <h3>Front View Of Head</h3>
                                                    </div>
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="img-fluid" src=@Model.First().Pictures.LowerHalf alt="LowerHalf">
                                                    <div class="carousel-caption d-none d-md-block">
                                                        <h3>Lower Half</h3>
                                                    </div>
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="img-fluid" src=@Model.First().Pictures.PersonalEffects alt="PersonalEffects">
                                                    <div class="carousel-caption d-none d-md-block">
                                                        <h3>Personal Effects</h3>
                                                    </div>
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="img-fluid" src=@Model.First().Pictures.UniqueFeatures alt="UniqueFeatures">
                                                    <div class="carousel-caption d-none d-md-block">
                                                        <h3>Unique Features</h3>
                                                    </div>
                                                </div>
                                            </div>
                                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </div>
                                    </div>
                                    <div role="tabpanel" class="tab-pane fade w-100 p-3" id="location">
                                        <div id="map"></div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <script>
    var model = @Html.Raw(Json.Encode(Model));


      function initMap() {
        var uluru = { lat: model[0].Location.coordinates[1], lng: model[0].Location.coordinates[0]};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 4,
          center: uluru
        });

        var marker = new google.maps.Marker({
            position: uluru,
            map: map,
        });

      }
                </script>
                <script async defer
                        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAQQt9X9nVbPwGBEnT9_WOFgFkCcfullUg&callback=initMap">
                </script>
                }

